extends layout

block content
  h1= title
  a(href='/house/create')
          button.btn(class="btn btn-success", style="margin: 5px; width: 130px;", onclick= destination) Create
  - var result = [{"house_name":"parkway apartment","house_size":250,"house_type":"wooden house"},{"house_name":"village O","house_size":200,"house_type":"Concrete"},{"house_name":"Horizon building","house_size":260,"house_type":"Igloo"}]
  div.container-fluid
     div.row
        each item,index in result
          - let destination = `dispatch(\"/house/update?id=${item._id}\")` 
          - let detailview = `dispatch(\"/house/update?id=${item._id}\")` 
          - let deleteview = `dispatch(\"/house/update?id=${item._id}\")` 
            div.col-sm-2(onclick=`buy(${index})`) house Name: #{item["house_name"]}  <br>  house_size: #{item["house_size"]} <br> house_type: #{item["house_type"]}
            button.btn( class="btn-primary ml-1", onclick= destination) Update  
            button.btn( class="btn-primary ml-1", onclick= detailview) Details
            button.btn( class="btn-primary ml-1", onclick= deleteview) Delete 
  script.
      function buy(index){
         alert("you purchased item "+(index+1))
      }
      function dispatch(path){ 
      window.location.href=path 
    } 
 